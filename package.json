{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "arxiv",
  "title": "arXiv",
  "description": "Search the arXiv for papers and find citations",
  "icon": "command-icon.png",
  "author": "koayon",
  "categories": [
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search arXiv",
      "description": "Search arXiv",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.1",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3",
    "arxiv-api": "^1.1.1"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
